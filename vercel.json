{
  "version": 2,
  "builds": [
    {
      "src": "dist/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/server.js"
    }
  ],

  "crons": [
    {
      "path": "/api/cron/cleanup-tokens",
      "schedule": "0 5 * * *",
      "method": "POST",
      "headers": {
        "Authorization": "Bearer $CRON_SECRET"
      }
    }
  ]
}
